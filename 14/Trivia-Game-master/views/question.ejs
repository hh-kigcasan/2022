<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Trivia War - Register</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
        $(document).ready(function (){   
            var socket = io(); //1
            $('#otp').submit(function(e){
                socket.emit('otp', $(this).serializeArray())
                e.preventDefault();
            })
            let sec = 30;
            setInterval(() => {
                sec-=1;
                $('#sec').text(sec)
            }, 1000);
            socket.on('generate_question', function(res){
                res.map(x=>{
                let number = 0;
                let score = 0;
                let question = 1;
                $('#question').html(x[question-1].question)
        
                    function displayOptions(){
                        x[question-1].incorrectAnswers.push(x[question-1].correctAnswer)
                        x[question-1].incorrectAnswers.sort(() => .5 - Math.random())
                        for(let answer of x[question-1].incorrectAnswers){
                            console.log(question-1<10)
                            $('#choices').append("<h5 class='col-lg-8 border border-white mx-auto px-5 py-2 option' id="+number+">"+answer+"</h5>")
                            $('.option').click(function(){
                                playSound("/sfx/munch.mp3");
                                $('.timer').hide()
                                if($(this).text()===x[question-1].correctAnswer){
                                    score += 5;
                                    $(this).css('background', 'rgb(16,208,116)')
                                    $('#status').html("<img src='/images/good job.png' class='mt-3'><h3 class='mb-5' id='correct'>GOOD JOB!</h3>")
                                    $('#score').text(score)
                                } 
                                else{
                                    $('#status').html("<img src='/images/Something went wrong.png' class='mt-3'><h3 class='mb-5' id='wrong'>SORRY, INCORRECT ANSWER!</h3>") 
                                    $(this).css('background', 'rgb(255, 1, 1)')
                                }
                                $('.next').css('display', 'inline-block')
                            })

                        }
                    }
                    displayOptions();
                $('.next').click(function(){
                    if(question-1<9){
                            number += 1
                            $('#choices').html("")
                            question+=1;
                            $('#question_id').text(question)
                            $('#question').html(x[question-1].question)
                            displayOptions();
                            $('.timer').show()
                            $('#status').html("")
                            $('.option').css("background", "rgba(84, 47, 165, 0.5)")
                    }
                    else{
                        console.log("end")
                    }
                    })
                })  
            })    
        })
     </script>
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-light">
            <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/images/Trivia War 2.jpg" alt="" width="250" height="75">
            </a>
            </div>
        </nav>
        <div class="row">
            <div class="col-lg-6 text-white mt-5 text-start px-5 timer">
                <h2>Score: <span id="score">0</span></h2>
            </div>
        </div>
        <div class="col-lg-12 text-white  justify-content-center">
            <div class="text-center" id="status"></div>
            <h3 class="text-center">QUESTION</h3>
            <h4 class="text-center mt-2 mb-5" id="question"></h4>
            <div class="text-center" id="choices"></div>
        </div>
        <div class="col-lg-12 text-end">
            <button class="btn btn-lg btn-success mx-5 next">NEXT</button>
        </div>
    </div>
</body>
</html>