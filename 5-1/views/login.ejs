                <form action="/login" method="post" class="px-5">
                    <h3 class="mb-3 text-success">Login</h3>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">User Name: </span>
                        <input type="text" class="form-control" name="username" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Password: </span>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary shadow px-5">Login</button>
                    </div>
                </form>

                <form action="/register" method="post" class="px-5">
                    <h3 class="mb-3 text-light">Register</h3>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">User Name: </span>
                        <input type="text" class="form-control" name="register_user" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Password: </span>
                        <input type="password" class="form-control" name="register_password" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Confirm Password: </span>
                        <input type="password" class="form-control" name="confirm_password" />
                    </div>
                    <div class="row">
                        <aside class="form-check col-lg-4">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="avatar"
                                value="./../../assets/images/avatar1.png"
                            />
                            <img src="./../../assets/images/avatar1.png" class="card-img-top" alt="..." />
                        </aside>
                        <aside class="form-check col-lg-4">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="avatar"
                                value="./../../assets/images/avatar2.png"
                                checked
                            />
                            <img src="./../../assets/images/avatar2.png" class="card-img-top" alt="..." />
                        </aside>
                        <aside class="form-check col-lg-4">
