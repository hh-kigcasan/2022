<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Tech Track: Monitoring</title>
        <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <link href="https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css" rel="stylesheet" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script type="text/javascript" src="/socket.io/socket.io.js"></script>
        <script src="https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js"></script>

        <link rel="stylesheet" href="./../assets/css/styles.css" />
    </head>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <img src="./../assets/images/developer-icon.png" alt="" id="navlogo" />
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon text-light mx-3">Menu</span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link">Tickets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#sensor">Sensor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#chatbox">Chatbox</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a
                            class="nav-link dropdown-toggle"
                            href="#"
                            id="navbarDropdownMenuLink"
                            role="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            Fly to
                        </a>
                        <ul class="dropdown-menu flyto" aria-labelledby="navbarDropdownMenuLink">
                            <% users.map(user=>{ %>
                            <li><a class="dropdown-item"><%= user.username %></a></li>
                            <% }) %>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex" action="/logout">
                    <button class="btn btn-outline-warning" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <body>
        <div id="map"></div>
        <!-- MODALS -->
        <%- include('./modals/sensors') %> <%- include('./modals/tickets') %> <%- include('./modals/chatbox') %>
        <script src="./../assets/scripts/chat-controls.js"></script>
        <script src="./../assets/scripts/socket.js"></script>
        <script src="./../assets/scripts/map.js"></script>
    </body>
</html>
