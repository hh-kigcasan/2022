<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Rankings</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/master.css">
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="javascript/master.js"></script>
</head>
<body class="user">
    <%- nav_partial %>
    <section class="rankings">
        <h3>Rankings</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>No. of Challenges Taken</th>
                <th>Total Duration</th>
            </tr>
<%
    if (rankings.length < 1) {
%>
        <tr>
            <td colspan="5" class="empty">No data found</td>
        </tr>
<%
    }
    for (let i = 0; i < rankings.length; i++) {
%>
            <tr>
                <td><%= rankings[i].user_id %></td>
                <td><%= rankings[i].username %> <%= rankings[i].username === user.username ? '(You)' : '' %></td>
                <td><%= rankings[i].no_of_challenges_taken %></td>
                <td><%= rankings[i].total_duration %></td>
            </tr>
<%
    }
%>
        </table>

<%
    if (rankings.length > 0) {
%>
        <div class="pagination">
            <a href="#">Previous</a>
            <a href="#">Next 25</a>
        </div>
<%
    }
%>


    </section>
</body>
</html>